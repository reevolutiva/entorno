#!/bin/bash

# Extract the WordPress site from the server origin
cd /path/to/wordpress/site
zip -r /path/to/wordpress/site.zip .

# Extract the BDD from the WordPress site
MYSQL_HOST="localhost"
MYSQL_USER="root"
MYSQL_PASSWORD="password"
MYSQL_DATABASE="wordpress_bdd"

mysql -u $MYSQL_USER -p$MYSQL_PASSWORD -h $MYSQL_HOST $MYSQL_DATABASE < /path/to/wordpress/site/wp-config

# Transfer the .zip and .sql files to the destination server
scp /path/to/wordpress/site.zip user@destination_server:/volumen/wp/
scp /path/to/wordpress/site.sql user@destination_server:/volumen/db/
